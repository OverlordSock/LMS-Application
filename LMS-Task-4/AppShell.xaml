<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LMS_Task_4.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LMS_Task_4"
    xmlns:Pages="clr-namespace:LMS_Task_4.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home">
            <ShellContent ContentTemplate="{DataTemplate Pages:HomePage}"/>
        </Tab>
        <Tab Title="Inventory">
            <ShellContent ContentTemplate="{DataTemplate Pages:InventoryPage}"/>
        </Tab>
        <Tab Title="Statistics">
            <ShellContent ContentTemplate="{DataTemplate Pages:StatisticsPage}"/>
        </Tab>
        <Tab Title="Management">
            <ShellContent ContentTemplate="{DataTemplate Pages:ManagementPage}"/>
        </Tab>
    </TabBar>

</Shell>
